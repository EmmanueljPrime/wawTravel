{% extends 'base.html.twig' %}

{% block title %}Profile - Waw.travel{% endblock %}

{% block body %}
    <div class="container my-5">
        <!-- Profil utilisateur -->
        <div class="card shadow-sm mb-4">
            <div class="card-body d-flex align-items-center">
                <i class="fas fa-user-circle fa-5x text-secondary me-3"></i>
                <div>
                    <h4 class="mb-1">Hello {{ user.username }}!</h4>
                </div>
            </div>
        </div>

        <!-- Navigation des onglets -->
        <ul class="nav nav-tabs mb-4">
            <li class="nav-item">
                <a class="nav-link active" id="profile-tab" data-bs-toggle="tab" href="#profile">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="trip-collections-tab" data-bs-toggle="tab" href="#trip-collections">Trip Collections</a>
            </li>
        </ul>

        <!-- Contenu des onglets -->
        <div class="tab-content">
            <!-- Profil -->
            <div class="tab-pane fade show active" id="profile">
                <div class="row g-4">
                    {% for trip in public_road_trips %}
                        <div class="col-md-3">
                            <div class="card shadow-sm position-relative">
                                <!-- Image du voyage ou image par défaut -->
                                <div class="card-img-top" style="background-image: url('{{ trip.coverImage ?: asset("img/placeholder_image.png") }}'); background-size: cover; background-position: center; height: 180px;">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">{{ trip.title }}</h5>
                                    <p class="card-text text-muted">{{ trip.description }}</p>
                                    <p><strong>Nombre de checkpoints :</strong> {{ trip.checkpoints|length }}</p>
                                    <div class="d-flex justify-content-end mt-3">
{#                                        <a href="{{ path('app_trip_view', { id: trip.id }) }}" class="btn btn-primary">Voir les détails</a>#}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <p class="text-muted text-center">Aucun trip public disponible.</p>
                    {% endfor %}
                </div>
            </div>

            <!-- Collections de voyages -->
            <div class="tab-pane fade" id="trip-collections">
                <div class="row g-4">
                    <!-- Card pour ajouter un voyage -->
                    <div class="col-md-3">
                        <button class="btn btn-light w-100 h-100 shadow-sm" data-bs-toggle="modal" data-bs-target="#addTripModal">
                            <i class="fas fa-plus fa-3x text-primary"></i>
                        </button>
                    </div>

                    <!-- Cartes pour les voyages -->
                    {% for road_trip in road_trips %}
                        <div class="col-md-3">
                            <div class="card shadow-sm position-relative">
                                <!-- Croix pour supprimer -->
                                <form action="{{ path('app_road_trip_delete', { id: road_trip.id }) }}" method="post" class="position-absolute top-0 end-0 m-2">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ road_trip.id) }}">
                                    <button type="submit" class="btn btn-link p-0 text-danger" title="Delete Trip" onclick="return confirm('Are you sure you want to delete this trip?');">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </form>

                                <!-- Image du voyage ou image par défaut -->
                                <div class="card-img-top" style="background-image: url('{{ road_trip.coverImage ?: asset("img/placeholder_image.png") }}'); background-size: cover; background-position: center; height: 180px;">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">{{ road_trip.title }}</h5>
                                    <p class="card-text text-muted">{{ road_trip.description }}</p>
                                    <p><strong>Visibility:</strong> {{ road_trip.visibility }}</p>
                                    <div class="d-flex justify-content-between mt-3">
                                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editTripModal-{{ road_trip.id }}">Edit Trip</button>
                                        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#manageCheckpointsModal-{{ road_trip.id }}">Manage Checkpoints</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <!-- Modal pour ajouter un voyage -->
    <div class="modal fade" id="addTripModal" tabindex="-1" aria-labelledby="addTripModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addTripModalLabel">Create a New Trip</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(form, { 'attr': { 'id': 'add-trip-form' } }) }}
                    <div class="mb-3">
                        {{ form_label(form.title, 'Name of the collection', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                        {{ form_widget(form.title, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.description, 'Description', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                        {{ form_widget(form.description, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.coverImage, 'Photo', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                        {{ form_widget(form.coverImage, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.visibility, 'Visibility', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                        {{ form_widget(form.visibility, { 'attr': { 'class': 'form-select' } }) }}
                    </div>
                    <div class="d-flex justify-content-end mt-3">
                        <button type="submit" class="btn btn-primary me-2">Save</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Modals pour chaque voyage -->
    {% for road_trip in road_trips %}
        <!-- Modal pour éditer un voyage -->
        <div class="modal fade" id="editTripModal-{{ road_trip.id }}" tabindex="-1" aria-labelledby="editTripModalLabel-{{ road_trip.id }}" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editTripModalLabel-{{ road_trip.id }}">Edit {{ road_trip.title }}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        {{ form_start(edit_forms[road_trip.id], {
                            'attr': { 'id': 'edit-trip-form-' ~ road_trip.id },
                            'action': path('app_road_trip_edit', { 'id': road_trip.id }),
                        }) }}
                        <div class="mb-3">
                            {{ form_label(edit_forms[road_trip.id].title, 'Name of the collection', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                            {{ form_widget(edit_forms[road_trip.id].title, { 'attr': { 'class': 'form-control' } }) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(edit_forms[road_trip.id].description, 'Description', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                            {{ form_widget(edit_forms[road_trip.id].description, { 'attr': { 'class': 'form-control' } }) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(edit_forms[road_trip.id].coverImage, 'Photo', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                            {{ form_widget(edit_forms[road_trip.id].coverImage, { 'attr': { 'class': 'form-control' } }) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(edit_forms[road_trip.id].visibility, 'Visibility', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                            {{ form_widget(edit_forms[road_trip.id].visibility, { 'attr': { 'class': 'form-select' } }) }}
                        </div>
                        <div class="d-flex justify-content-end mt-3">
                            <button type="submit" class="btn btn-primary me-2">Save</button>
                        </div>
                        {{ form_end(edit_forms[road_trip.id]) }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal pour gérer les checkpoints -->
        <div class="modal fade" id="manageCheckpointsModal-{{ road_trip.id }}" tabindex="-1" aria-labelledby="manageCheckpointsModalLabel-{{ road_trip.id }}" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="manageCheckpointsModalLabel-{{ road_trip.id }}">Manage Checkpoints for {{ road_trip.title }}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Liste des checkpoints existants -->
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">PBT Trip</h4>
                                <p class="card-text text-muted">Team of the Voyagio created this list of attractions that we are planning to visit after our capstone project</p>
                                <div class="row g-3">
                                    {% for checkpoint in road_trip.checkpoints %}
                                        <div class="col-md-12">
                                            <div class="card shadow-sm">
                                                <div class="d-flex align-items-center">
                                                    <img src="{{ asset('img/placeholder_image.png') }}" alt="Checkpoint Image" class="img-fluid" style="width: 80px; height: 80px; object-fit: cover;">
                                                    <div class="ms-3">
                                                        <h5 class="mb-1">{{ checkpoint.name }}</h5>
                                                        <p class="text-muted small mb-0">{{ checkpoint.latitude }}, {{ checkpoint.longitude }}</p>
                                                        <p class="text-muted small mb-0">Arrival: {{ checkpoint.arrivalDate|date('Y-m-d H:i') }}</p>
                                                    </div>
                                                    <!-- Bouton pour supprimer un checkpoint -->
                                                    <form action="{{ path('app_checkpoint_delete', { 'id': checkpoint.id }) }}" method="post" class="ms-auto">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ checkpoint.id) }}">
                                                        <button type="submit" class="btn btn-link p-0 text-danger" title="Delete Checkpoint" onclick="return confirm('Are you sure you want to delete this checkpoint?');">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    {% else %}
                                        <p class="text-muted text-center">No checkpoints yet. Add one using the button below.</p>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>

                        <!-- Bouton pour ajouter un checkpoint -->
                        <div class="text-center mt-4">
                            <button class="btn btn-primary rounded-circle" data-bs-toggle="modal" data-bs-target="#createCheckpointModal-{{ road_trip.id }}" style="width: 50px; height: 50px; font-size: 24px;">+</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal pour ajouter un checkpoint -->
        <div class="modal fade" id="createCheckpointModal-{{ road_trip.id }}" tabindex="-1" aria-labelledby="createCheckpointModalLabel-{{ road_trip.id }}" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createCheckpointModalLabel-{{ road_trip.id }}">Create Checkpoint for {{ road_trip.title }}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        {{ form_start(create_checkpoint_forms[road_trip.id], {
                            'attr': { 'id': 'create-checkpoint-form-' ~ road_trip.id },
                            'action': path('app_checkpoint_new', { 'roadTripId': road_trip.id }),
                        }) }}
                        <div class="mb-3">
                            {{ form_label(create_checkpoint_forms[road_trip.id].name, 'Name', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                            {{ form_widget(create_checkpoint_forms[road_trip.id].name, { 'attr': { 'class': 'form-control' } }) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(create_checkpoint_forms[road_trip.id].latitude, 'Latitude', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                            {{ form_widget(create_checkpoint_forms[road_trip.id].latitude, { 'attr': { 'class': 'form-control' } }) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(create_checkpoint_forms[road_trip.id].longitude, 'Longitude', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                            {{ form_widget(create_checkpoint_forms[road_trip.id].longitude, { 'attr': { 'class': 'form-control' } }) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(create_checkpoint_forms[road_trip.id].arrivalDate, 'Arrival Date', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                            {{ form_widget(create_checkpoint_forms[road_trip.id].arrivalDate, { 'attr': { 'class': 'form-control' } }) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(create_checkpoint_forms[road_trip.id].departureDate, 'Departure Date', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                            {{ form_widget(create_checkpoint_forms[road_trip.id].departureDate, { 'attr': { 'class': 'form-control' } }) }}
                        </div>
                        <div class="d-flex justify-content-end mt-3">
                            <button type="submit" class="btn btn-primary me-2">Save</button>
                        </div>
                        {{ form_end(create_checkpoint_forms[road_trip.id]) }}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}