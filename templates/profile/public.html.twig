{% extends 'base.html.twig' %}

{% block title %}Public Profile - {{ profileUser.username }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="card shadow-sm mb-4">
            <div class="card-body d-flex align-items-center">
                <i class="fas fa-user-circle fa-5x text-secondary me-3"></i>
                <div>
                    <h4 class="mb-1">Profile of {{ profileUser.username }}</h4>
                    <p class="text-muted">Discover their public trips</p>
                </div>
            </div>
        </div>

        <!-- Voyages publics -->
        <div class="row g-4">
            {% for trip in publicRoadTrips %}
                <div class="col-md-3">
                    <div class="card shadow-sm position-relative" data-bs-toggle="modal" data-bs-target="#tripDetailsModal-{{ trip.id }}" style="cursor: pointer;">
                        <!-- Images du voyage -->
                        <div class="card-img-top" style="height: 180px; overflow: hidden;">
                            {% if trip.images|length > 0 %}
                                <img src="{{ asset('uploads/roadtrips/' ~ trip.images[0].path) }}" alt="{{ trip.title }}" class="img-fluid" style="object-fit: cover; width: 100%; height: 100%;">
                            {% else %}
                                <img src="{{ asset('img/placeholder_image.png') }}" alt="Placeholder" class="img-fluid" style="object-fit: cover; width: 100%; height: 100%;">
                            {% endif %}
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{ trip.title }}</h5>
                            <p class="card-text text-muted">{{ trip.description }}</p>
                            <p><strong>Checkpoints :</strong> {{ trip.checkpoints|length }}</p>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-muted text-center">This user has no public trips.</p>
            {% endfor %}
        </div>

        <!-- Modals pour les dÃ©tails des voyages -->
        {% for trip in publicRoadTrips %}
            <div class="modal fade" id="tripDetailsModal-{{ trip.id }}" tabindex="-1" aria-labelledby="tripDetailsModalLabel-{{ trip.id }}" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="tripDetailsModalLabel-{{ trip.id }}">{{ trip.title }}</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            {% if trip.images|length > 0 %}
                                <div id="carouselTripImages-{{ trip.id }}" class="carousel slide mb-3" data-bs-ride="carousel">
                                    <div class="carousel-inner">
                                        {% for image in trip.images %}
                                            <div class="carousel-item {% if loop.first %}active{% endif %}">
                                                <img src="{{ asset('uploads/roadtrips/' ~ image.path) }}" class="d-block w-100" alt="{{ trip.title }}">
                                            </div>
                                        {% endfor %}
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselTripImages-{{ trip.id }}" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#carouselTripImages-{{ trip.id }}" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                            {% else %}
                                <img src="{{ asset('img/placeholder_image.png') }}" alt="Placeholder" class="img-fluid mb-3">
                            {% endif %}

                            <p>{{ trip.description }}</p>

                            <h6>Checkpoints :</h6>
                            <ul>
                                {% for checkpoint in trip.checkpoints %}
                                    <li>
                                        <strong>{{ checkpoint.name }}</strong><br>
                                    </li>
                                {% else %}
                                    <li>Aucun checkpoint pour ce trip</li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}